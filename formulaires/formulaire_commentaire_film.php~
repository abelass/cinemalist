<?php

function formulaire_commentaire_film_charger($id_film){
	$valeurs=array(
	'titre'=>'',
	'nom'=>'',
	'email'=>'',
	'texte'=>'',
	'titre'=>'',
	'etoiles'=>'',
	'daube'=>'',
	'coeur'=>'',	
	'etape'=>'',
	'id_film'=>$id_film,
	'id_auteur'=>$GLOBALS['auteur_session']['id_auteur'],
	'visualize'=>'non',
	'statut'=>lire_config('cinemalist/statut_par_defaut_des_commentaires','publie'),
	'texte'=>substr($valeurs['texte'], 0, lire_config('cinemalist/taille_maximum_des_commentaires', 500)),
	'titre'=>'',
	'titre'=>'',						
	);


return $valeurs;
}
	
function formulaire_commentaire_film_charger($id_film) {
	if (strlen(_request('radar')) < 1){	
		
		if ($contexte['daube'] == 'on') {$contexte['daube'] = 1;}else{$contexte['daube'] = 0;}
		if ($contexte['coeur'] == 'on') {$contexte['coeur'] = 1;}else{$contexte['coeur'] = 0;}
		
		if ($contexte['etape'] == 'visualize'){
			$contexte['visualize'] = "oui";
		}
		
		if (_request('publier')){
			$sql_insert_commentaire = "INSERT INTO spip_commentaires_film VALUES ('','".addslashes($contexte['titre'])."','".addslashes($contexte['nom'])."','".addslashes($contexte['email'])."','".addslashes($contexte['texte'])."','".$contexte['etoiles']."','".$contexte['daube']."','".$contexte['coeur']."','".$contexte['id_auteur']."','".$contexte['id_film']."','".date('Y-m-d H:m:s')."','".$contexte['statut']."');";
			$res_insert_commentaire = spip_query($sql_insert_commentaire);
			$contexte['visualize'] = "non";
			unset($contexte);
			$contexte = array();
			$contexte['formulaire'] = "formulaires/commentaire_film";
			$contexte['resultat'] = "Votre commentaire &agrave; bien &eacute;t&eacute; enregistr&eacute;";
			$contexte['visualize'] = "non";
		}
	}
	return array($contexte['formulaire'],0,$contexte);
	
}

?>
